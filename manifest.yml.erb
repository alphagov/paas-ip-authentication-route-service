---

applications:
  - name: <%= ENV.fetch("PAAS_APP_NAME") %><%= ENV.fetch("ENV") == 'production' ? '' : '-' + ENV.fetch("ENV") %>
    routes:
      - route: <%= ENV.fetch("PAAS_APP_NAME") %><%= ENV.fetch("ENV") == 'production' ? '' : '-' + ENV.fetch("ENV") %>.<%= ENV.fetch("PAAS_DOMAIN") %>
    buildpacks: 
      - staticfile_buildpack
    instances: <%= ENV.fetch("PAAS_INSTANCES", "1") %>
    memory: 256M
    env:
      ALLOWED_IPS: "<%= ENV.fetch("ALLOWED_IPS") %>"
